@model IEnumerable<UCP1_PAW_077.Models.Produk>

@{
    ViewData["Title"] = "Index";
}

<h1>Daftar Jajanan</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Produk")
            </th>
            </th>
            <th>
                @Html.DisplayName("Harga")
            </th>
            </th>
            <th>
                @Html.DisplayName("id Pedagang")
            </th>
            </th>
            <th>
                @Html.DisplayName("Kode Produk")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaProduk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Harga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPedagangNavigation.IdPedagang)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KodeProduk"><i class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.KodeProduk"><i class="fas fa-info-circle"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.KodeProduk"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
